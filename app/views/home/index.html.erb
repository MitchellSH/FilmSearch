<div class="section">
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>Now Playing</h2>
        <div class="home-page-card-columns card-columns">
          <% @results.each do |m| %>
            <%= link_to movie_details_show_path(:id => m.id), 'data-turbolinks' => false do %>
              <div id="uid_<%= m.id %>" class="card card-blog card-plain" data-count="1" data-aos="fade-up">
                <div class="card-header card-header-image">
                  <img src="https://image.tmdb.org/t/p/w500/<%= m.backdrop_path %>">
                  <div class='card-title'><%= m.title %></div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
